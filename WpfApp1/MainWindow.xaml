        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Game Window" Height="450" Width="800">
    <Grid x:Name="ButtonGrid">
        <Button x:Name="btnMinesweeper" HorizontalAlignment="Left" Margin="69,60,0,0" VerticalAlignment="Top" Width="80" Height="80" Background="#FFDDDDDD" Content="Minesweeper" Click="btnMinesweeper_Click"/>
        <Button x:Name="btnKings" Margin="154,60,0,0" VerticalAlignment="Top" Height="80" Background="#FFDDDDDD" Content="Kings Corners"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" UseLayoutRounding="False" HorizontalAlignment="Left" Width="80" Click="btnKings_Click"/>
    </Grid>
</Window>
