<Window x:Class="WpfApp1.Minesweeper.MinesweeperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Minesweeper"
        mc:Ignorable="d"
        Title="MinesweeperWindow" Height="450" Width="800">
    <Grid x:Name="gridView">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StatusBar x:Name="sbStatus" VerticalAlignment="Top" Grid.RowSpan="2" Height="30">
            <Separator Margin="0" Width="153" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Difficulty" HorizontalAlignment="Center"/>
            <Separator Height="30" Margin="0" VerticalAlignment="Top" Width="105" HorizontalAlignment="Left"/>
            <Button x:Name="btnGameBegin" Content="Button" Width="75"/>


        </StatusBar>
        <Grid x:Name="gridGame" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Grid.Row="1" Uid="gridGame">

        </Grid>
    </Grid>
</Window>
