<Window x:Class="WpfApp1.Minesweeper.SelectDifficulty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Minesweeper"
        mc:Ignorable="d"
        Title="SelectDifficulty" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnEasy" Content="EASY" HorizontalAlignment="Center" VerticalAlignment="Top" Width="247" Margin="283,45,262,0" Height="50" Click="btnEasy_Click" Background="#FF23FF00"/>
        <Button x:Name="btnMedium" Content="MEDIUM" HorizontalAlignment="Center" VerticalAlignment="Top" Width="247" Margin="283,144,262,0" Height="50" Click="btnMedium_Click" Background="#FFF3FF00"/>
        <Button x:Name="btnHard" Content="HARD" HorizontalAlignment="Center" VerticalAlignment="Top" Width="247" Margin="283,236,262,0" Height="50" Click="btnHard_Click" Background="Red"/>

    </Grid>
</Window>
